<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/t_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/t_output"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/t_output"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_above="@+id/button_layout"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="60dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/button_layout"
        android:paddingVertical="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#18292C">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/b_clear"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="AC"
                android:backgroundTint="#CF1D1D"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

             <com.google.android.material.button.MaterialButton
                 android:layout_width="65dp"
                 android:layout_height="72dp"
                 app:cornerRadius="35dp"
                 android:id="@+id/open_bracket"
                 style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                 android:text="("
                 android:layout_margin="12dp"
                 android:textStyle="bold"
                 android:textSize="30dp"/>


             <com.google.android.material.button.MaterialButton
                 android:layout_width="65dp"
                 android:layout_height="72dp"
                 app:cornerRadius="35dp"
                 android:id="@+id/close_bracket"
                 style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                 android:text=")"
                 android:layout_margin="12dp"
                 android:textStyle="bold"
                 android:textSize="30dp"/>


             <com.google.android.material.button.MaterialButton
                 android:layout_width="65dp"
                 android:layout_height="72dp"
                 app:cornerRadius="35dp"
                 android:id="@+id/divide"
                 style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                 android:text="/"
                 android:layout_margin="12dp"
                 android:textStyle="bold"
                 android:textSize="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/b7"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="7"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/b8"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="8"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="30dp"/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/b9"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="9"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="30dp"/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/mul"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="*"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/b4"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="4"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/b5"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="5"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="30dp"/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/b6"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="6"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="30dp"/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/add"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="+"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/b1"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="65dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="1"
                android:textSize="30dp"
                android:textStyle="bold"
                app:cornerRadius="35dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/b2"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="2"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="30dp"/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/b3"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="3"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="30dp"/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/sub"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="-"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="65dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:id="@+id/bc"
                android:text="X"
                android:backgroundTint="#B31B1B"
                android:textSize="20dp"
                android:textStyle="bold"
                app:cornerRadius="35dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/b0"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="0"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="30dp"/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/bdot"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="."
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="38dp"/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="72dp"
                app:cornerRadius="35dp"
                android:id="@+id/bequal"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:text="="
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
